[user]
    name = Albert Lash
    email = albert.lash@gmail.com
[color]
    pager = true
    ui = true
    status = auto
    branch = auto

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log
    pom = push origin master
    pushup = "!gitbranchname() { git symbolic-ref --short HEAD; }; gitpushupstream() { git push --set-upstream origin `gitbranchname`; }; gitpushupstream"
    master = "!git pull --rebase origin master"
    pushup = "!gitbranchname() { git symbolic-ref --short HEAD; }; gitpushupstream() { git push --set-upstream origin `gitbranchname`; }; gitpushupstream"

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
    default = simple

